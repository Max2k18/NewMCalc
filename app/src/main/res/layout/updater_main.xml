<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/layoutUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txtUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/updateavail"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/btnUpdate"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:onClick="update"
                app:srcCompat="@drawable/update" />

        </LinearLayout>

        <Button
            android:id="@+id/btnClsHistory"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/forcls"
            android:onClick="clear_history"
            android:text="@string/cls_history"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible" />

        <Switch
            android:id="@+id/switchSaveOnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchSave"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/switchSaveOff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAnotherSettings"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="other_settings"
            android:text="@string/other_set" />

        <Button
            android:id="@+id/btnChLang"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="ch_lang"
            android:text="@string/ch_lang"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnStopReceive"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/redbackground"
            android:onClick="stop_receive"
            android:text="@string/stop_receive"
            android:textColor="@color/white"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnAboutDev"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:onClick="sh_about_dev"
            android:text="@string/about_dev"
            android:translationZ="4dp" />

        <Button
            android:id="@+id/btnReport"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="report"
            android:text="@string/report_problem" />

        <TextView
            android:id="@+id/txtxCopyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â©MaxSav Team, 2018-2019"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>