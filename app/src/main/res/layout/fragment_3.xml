<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tblR2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imgBtnSettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onAdditionalButtonsClick"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/settings" />

            <ImageButton
                android:id="@+id/btnImgNumGen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onAdditionalButtonsClick"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/dice" />

            <ImageButton
                android:id="@+id/btnImgPassgen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onAdditionalButtonsClick"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/passgen" />

        </TableRow>

        <TableRow
            android:id="@+id/F2tblR4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:weightSum="1.0">

            <ImageButton
                android:id="@+id/imgBtnBin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.25"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onAdditionalButtonsClick"
                android:scaleType="centerInside"
                android:src="@drawable/binary" />

            <ImageButton
                android:id="@+id/btnImgHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:onClick="onAdditionalButtonsClick"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/history" />
        </TableRow>
    </TableLayout>

</LinearLayout>