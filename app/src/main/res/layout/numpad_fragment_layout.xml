<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <LinearLayout
        android:id="@+id/tblR1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMult"
            style="@style/NumPadButtonStyle"
            android:onClick="insertBinaryOperatorOnClick"
            android:text="@string/multiply" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDiv"
            style="@style/NumPadButtonStyle"
            android:onClick="insertBinaryOperatorOnClick"
            android:text="@string/div" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            style="@style/NumPadButtonStyle"
            android:onClick="insertBinaryOperatorOnClick"
            android:text="@string/plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnZero"
            style="@style/NumPadButtonStyle"
            android:onClick="justInsert"
            android:text="@string/digit_0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDot"
            style="@style/NumPadButtonStyle"
            android:onClick="insertDot" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCalc"
            style="@style/NumPadButtonStyle"
            android:textColor="?colorAccent"
            android:text="@string/eq"
            android:onClick="onEqual"
            android:textSize="@dimen/numpad_buttons_text_size"
             />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus"
            style="@style/NumPadButtonStyle"
            android:onClick="insertBinaryOperatorOnClick"
            android:text="@string/minus" />

    </LinearLayout>

</LinearLayout>