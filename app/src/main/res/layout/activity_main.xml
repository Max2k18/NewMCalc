<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/additional_tools"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:translationZ="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/imgBtnSettings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:backgroundTint="@android:color/transparent"
            android:onClick="onClickAdd"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/settings" />

        <ImageButton
            android:id="@+id/btnImgNumGen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:backgroundTint="@android:color/transparent"
            android:onClick="onClickAdd"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/dice" />

        <ImageButton
            android:id="@+id/btnImgPassgen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:backgroundTint="@android:color/transparent"
            android:onClick="onClickAdd"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/passgen" />

        <ImageButton
            android:id="@+id/btnImgHistory"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@android:color/transparent"
            android:onClick="onClickAdd"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/history" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShAdd"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:onClick="show_hide"
            android:text=">"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShAdd2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:onClick="show_hide"
            android:text=">"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/scrollViewAns"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true"
        android:foregroundGravity="right"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024">

        <LinearLayout
            android:id="@+id/llStr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAns2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/fortextans"
                android:textSize="34sp"
                android:textStyle="bold"
                android:visibility="invisible"
                tools:targetApi="o" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="8dp"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:clickable="true"
        android:fillViewport="true"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="55dp">

            <TextView
                android:id="@+id/textStr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scrollbarSize="0dp"
                android:scrollbars="none"
                android:selectAllOnFocus="false"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="46sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.114"
                tools:targetApi="o" />
        </LinearLayout>
    </HorizontalScrollView>

    <TableLayout
        android:id="@+id/tbl"
        android:layout_width="0dp"
        android:layout_height="324dp"
        android:layout_alignTop="@+id/scrollview"
        android:layout_alignEnd="@+id/scrollview"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TableRow
            android:id="@+id/tblR5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnActions"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:onClick="gotoactions"
                android:text="@string/threedots"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:visibility="gone"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelAll"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:onClick="delall"
                android:text="C"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:backgroundTint="@color/colorAccent"
                android:drawingCacheQuality="auto"
                android:hapticFeedbackEnabled="true"
                android:longClickable="false"
                android:onClick="click_addtional_tools"
                android:scaleType="centerInside"
                android:src="@drawable/arrow_up"
                android:tag="up" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:onClick="delSymbol"
                android:text="@string/delSymb"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

        </TableRow>

        <TableRow
            android:id="@+id/tblR6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.17"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMS"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:onClick="memory_ms"
                android:text="MS/st"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMR"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:onClick="memory_mr"
                android:text="MR/rc"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btnMemMinus"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="M-"
                android:textSize="24sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMemPlus"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="M+"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tblR1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="7"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_horizontal|top"
                android:onClick="onClick"
                android:text="8"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="9"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMult"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="@string/multiply"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

        </TableRow>

        <TableRow
            android:id="@+id/tblR2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="4"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="5"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="6"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDiv"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="@string/div"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

        </TableRow>

        <TableRow
            android:id="@+id/tblR3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="1"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="2"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="3"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlus"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="+"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="448dp" />

        </TableRow>

        <TableRow
            android:id="@+id/tblR4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.17"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnZero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:onClick="onClick"
                android:text="0"
                android:textAllCaps="false"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="55dp"
