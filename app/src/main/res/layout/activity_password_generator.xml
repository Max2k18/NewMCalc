<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ActionBarStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:title="@string/password_generator" />

    <TextSwitcher
        android:id="@+id/textSwitcherPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSwitcherPass">

        <Button
            android:id="@+id/btnPass6"
            style="@style/PasswordGeneratorButtonStyle"
            android:onClick="buttonOnClick"
            android:text="6" />

        <Button
            android:id="@+id/btnPass8"
            style="@style/PasswordGeneratorButtonStyle"
            android:onClick="buttonOnClick"
            android:text="8" />

        <Button
            android:id="@+id/btnPass12"
            style="@style/PasswordGeneratorButtonStyle"
            android:onClick="buttonOnClick"
            android:text="12" />

        <Button
            android:id="@+id/btnPass16"
            style="@style/PasswordGeneratorButtonStyle"
            android:text="16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.6">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/swCap"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:checked="true"
                android:onClick="onSwClick" />

            <CheckBox
                android:id="@+id/swLowerCase"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:checked="true"
                android:onClick="onSwClick" />

            <CheckBox
                android:id="@+id/swDigits"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:checked="true"
                android:onClick="onSwClick" />

            <CheckBox
                android:id="@+id/swHyphen"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:onClick="onSwClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/swPar"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:onClick="onSwClick" />

            <CheckBox
                android:id="@+id/swSpace"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:onClick="onSwClick" />

            <CheckBox
                android:id="@+id/swSpecial"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:onClick="onSwClick" />

            <CheckBox
                android:id="@+id/swUnderScore"
                style="@style/PasswordGeneratorCheckBoxStyle"
                android:onClick="onSwClick" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnGenPass"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/generate"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        app:layout_constraintVertical_bias="0.19999999" />

</androidx.constraintlayout.widget.ConstraintLayout>