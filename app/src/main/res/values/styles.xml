<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/black</item>

        <item name="buttonStyle">@style/ButtonStyle</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="windowBackgroundColor">@color/white</item>

        <item name="actionBarStyle">@style/ActionBarStyle</item>

        <item name="copy_button_drawable">@drawable/ic_content_copy_black_100dp</item>

        <item name="backspace_drawable">@drawable/ic_backspace_black</item>

        <item name="colorControlHighlight">@color/ripple_color</item>

        <item name="android:navigationBarColor">?windowBackgroundColor</item>

        <item name="fullNumpadViewButtonsBackgroundColor">@color/very_light_gray</item>
        <item name="fullNumpadViewButtonsRippleColor">@color/ripple_color</item>

    </style>

    <style name="AppTheme.Dark">
        <item name="android:windowBackground">@color/black</item>
        <item name="windowBackgroundColor">@color/black</item>
        <item name="textColor">@color/white</item>
        <item name="copy_button_drawable">@drawable/ic_content_copy_white_100dp</item>

        <item name="backspace_drawable">@drawable/ic_backspace_white</item>

        <item name="android:itemBackground">@color/black</item>

        <item name="colorControlHighlight">@color/ripple_color_on_black_theme</item>

        <item name="fullNumpadViewButtonsBackgroundColor">@color/gray</item>
        <item name="fullNumpadViewButtonsRippleColor">@color/ripple_color_on_black_theme</item>

        <item name="android:textColorSecondary">@color/light_gray</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextColor">?textColor</item>
        <item name="colorControlNormal">?textColor</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="DarkAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#494949</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
    </style>

    <style name="NavigationView.Default" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ConverterEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:gravity">end</item>
    </style>

</resources>
