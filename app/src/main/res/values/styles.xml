<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--item name="windowActionBar">false</item-->
        <!--item name="android:textColorPrimary">@color/white</item-->
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="background">@drawable/btn_rounded</item>
    </style>

    <style name="ActionBarLight">
        <item name="android:homeAsUpIndicator">@drawable/left_arrow_for_light</item>
        <item name="android:background">@drawable/white</item>
        <item name="android:windowElevation">0dp</item>
    </style>

    <style name="btns" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/redbackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--style name="DarkTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">#000</item>
    </style-->

</resources>
