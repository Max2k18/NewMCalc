<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MathOperationButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/math_operations_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NumPadButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/numpad_buttons_text_size</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="NumPadButtonStyle2" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/numpad_buttons_text_size</item>
        <item name="android:textColor">?textColor</item>
    </style>

    <style name="ClearButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="colorControlHighlight">?textColor</item>
        <item name="android:textSize">@dimen/numpad_buttons_text_size</item>
    </style>

    <style name="FullNumpadViewButtonsStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/full_numpad_view_buttons_background</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:tint">?colorAccent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="VariableButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:text">@string/plus</item>
        <item name="android:textSize">@dimen/variables_buttons_text_size_default</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

</resources>