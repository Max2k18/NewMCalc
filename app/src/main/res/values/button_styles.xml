<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MathOperationButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/math_operations_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NumPadButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/numpad_buttons_text_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.25</item>
    </style>

    <style name="ClearButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="colorControlHighlight">?textColor</item>
        <item name="android:textSize">@dimen/numpad_buttons_text_size</item>
    </style>

    <style name="VariableButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:text">@string/plus</item>
        <item name="android:textSize">@dimen/variables_buttons_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="PasswordGeneratorButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/password_generator_buttons_text_size</item>
        <item name="android:layout_width">@dimen/password_generator_buttons_size</item>
        <item name="android:layout_height">@dimen/password_generator_buttons_size</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PasswordGeneratorCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textSize">@dimen/password_generator_checkbox_text_size</item>
    </style>

</resources>