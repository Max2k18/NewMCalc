<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        android:key="@string/pref_save_result"
        android:title="@string/settings_save_last_result_on_close" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_save_history"
        android:title="@string/settings_save_history" />

    <SwitchPreference
        android:key="@string/pref_keep_screen_on"
        android:title="@string/keep_screen_on"/>

    <ListPreference
        android:defaultValue="system"
        android:entries="@array/theme_states"
        android:entryValues="@array/theme_states_values"
        android:key="@string/pref_theme"
        android:title="@string/theme" />
</PreferenceScreen>