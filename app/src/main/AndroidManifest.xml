<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maxsavteam.newmcalc2"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/newmcalc"
        android:label="@string/app_name"
        android:maxAspectRatio="2.1"
        android:roundIcon="@drawable/newmcalc"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="o">
        <activity
            android:name="com.maxsavteam.newmcalc2.Main2Activity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.maxsavteam.newmcalc2.NumberSystemConverterActivity" />
        <activity android:name="com.maxsavteam.newmcalc2.MemoryActionsActivity" />
        <activity android:name="com.maxsavteam.newmcalc2.CatchService" />
        <activity android:name="com.maxsavteam.newmcalc2.History" />
        <activity android:name="com.maxsavteam.newmcalc2.NumberPasswordGeneratorActivity" />
        <activity android:name="com.maxsavteam.newmcalc2.Settings" />
    </application>

</manifest>