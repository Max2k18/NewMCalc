<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maxsavteam.newmcalc"
    android:installLocation="auto">

    <application
        android:allowBackup="true"
        android:icon="@drawable/newmcalc"
        android:label="@string/app_name"
        android:maxAspectRatio="2.1"
        android:roundIcon="@drawable/newmcalc"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="o">
        <activity android:name=".number_system" />
        <activity android:name=".memory_actions_activity" />
        <activity android:name=".catch_service" />
        <activity
            android:name=".history"
            android:noHistory="true" />
        <activity
            android:name=".numgen"
            android:noHistory="false" />
        <activity
            android:name=".Updater"
            android:noHistory="true">
            <intent-filter>
                <data android:scheme="file" />
                <data android:scheme="content" />
                <data android:mimeType="application/vnd.android.package-archive" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>